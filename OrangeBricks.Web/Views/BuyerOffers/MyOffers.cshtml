@model OrangeBricks.Web.Controllers.Offers.ViewModels.MyOffersViewModel

@{
    ViewBag.Title = "My Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Offers</h2>

@if ((Model.Offers == null) || (Model.Offers.Count == 0))
{
    <p>You have not made any offers</p>
}
else
{
    <p>Here is a list of your offers:</p>

    foreach (var offer in Model.Offers)
    {
        <hr />
        <h3>@offer.StreetName</h3>
        <p>Property type: @offer.PropertyType</p>
        <p>Amount offered: @offer.Amount.ToString("C0")</p>
        <p>Date of offer: @offer.CreatedAt.ToLongDateString()</p>
        <p>Status of offer: <span class="text-primary">@offer.Status</span></p>
    }
}
